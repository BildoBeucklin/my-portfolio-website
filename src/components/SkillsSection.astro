---
import IconContainer from "@components/IconContainer.astro";
import Css from "@assets/icons/css.astro";
import Javascript from "@assets/icons/javascript.astro";
import Html from "@assets/icons/html.astro";
import Tailwind from "@assets/icons/tailwind.astro";
import AstroIcon from "@assets/icons/AstroIcon.astro";
import Node from "@assets/icons/node.astro";
import Bash from "@assets/icons/bash.astro";
import Git from "@assets/icons/git.astro";
import Github from "@assets/icons/github.astro";
import Vscode from "@assets/icons/vscode.astro";
import Figma from "@assets/icons/figma.astro";
import Python from "@assets/icons/python.astro";
import Vue from "@assets/icons/vue.astro";
import CLogo from "@assets/icons/cLogo.astro";

---

<section class="my-20">
  <h2 class="text-2xl font-semibold mb-1">Skills</h2>
  <hr class="mb-6 border-zinc-600">

  <h3 class="text-xl font-medium mb-4 siz">Frontend</h3>
  <div class="flex flex-wrap gap-5">
    <IconContainer name="HTML">
      <Html size="size-9" />
    </IconContainer>
    <IconContainer name="CSS">
      <Css size="size-9" />
    </IconContainer>
    <IconContainer name="Javascript">
      <Javascript size="size-9" />
    </IconContainer>
    <IconContainer name="Vue.js">
      <Vue size="size-9" />
    </IconContainer>
    <IconContainer name="Tailwind">
      <Tailwind size="size-9" />
    </IconContainer>
    <IconContainer name="Astro">
      <AstroIcon size="size-9" />
    </IconContainer>
  </div>

  <h3 class="text-xl font-medium mt-6 mb-4">Backend</h3>
  <div class="flex flex-wrap gap-5">
    <IconContainer name="Node">
      <Node size="size-9" />
    </IconContainer>
    <IconContainer name="C">
      <CLogo size="size-9" />
    </IconContainer>
    <IconContainer name="Python">
      <Python size="size-9" />
    </IconContainer>
  </div>

  <h3 class="text-xl font-medium mt-6 mb-4">Tools</h3>
  <div class="flex flex-wrap gap-5">

    <IconContainer name="Bash">
      <Bash size="size-9" />
    </IconContainer>
    <IconContainer name="Git">
      <Git size="size-9" />
    </IconContainer>
    <IconContainer name="Github">
      <Github size="size-9" />
    </IconContainer>
    <IconContainer name="VSCode">
      <Vscode size="size-9" />
    </IconContainer>
    <IconContainer name="Figma">
      <Figma size="size-9" />
    </IconContainer>
  </div>
</section>